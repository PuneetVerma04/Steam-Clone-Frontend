@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject SteamClone.Frontend.Services.IAuthService AuthService
@using Microsoft.AspNetCore.Components.Authorization

<MudThemeProvider Theme="_grayZoneTheme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Transparent" Fixed="true"
        Style="background-color: rgba(20, 20, 20, 0.95); backdrop-filter: blur(10px); border-bottom: 1px solid #333;">

        <MudIcon Icon="@Icons.Material.Filled.Hexagon" Size="Size.Large" Color="Color.Secondary" Class="mr-3" />
        <MudText Typo="Typo.h5" Class="ml-2"
            Style="font-family: 'Exo 2', sans-serif; font-weight: 800; letter-spacing: 3px; color: #fff;">
            GRAY<span style="color: #FF9800;">ZONE</span>
        </MudText>

        <MudSpacer />

        <MudButton Href="/" Variant="Variant.Text" Class="nav-link">STORE</MudButton>
        <MudButton Href="/cart" Variant="Variant.Text" Class="nav-link">CART</MudButton>
        <!--<MudButton Href="/orders" Variant="Variant.Text" Class="nav-link">MY ORDERS</MudButton>-->

        <AuthorizeView>
            <Authorized>
                <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" LockScroll="true">
                    <ActivatorContent>
                        <MudAvatar Color="Color.Secondary" Variant="Variant.Outlined" Class="ml-4"
                            Style="border-width: 2px; cursor: pointer;">
                            @context.User.Identity?.Name?.Substring(0, 1).ToUpper()
                        </MudAvatar>
                    </ActivatorContent>
                    <ChildContent>
                        <MudPaper Class="pa-3 d-flex flex-column gap-2" Elevation="0"
                            Style="min-width: 150px; background: #1E1E1E;">
                            <MudText Typo="Typo.subtitle1" Color="Color.Secondary"><b>@context.User.Identity?.Name</b>
                            </MudText>
                            <MudText Typo="Typo.caption" Style="color: #aaa;">@GetEmail(context.User)</MudText>
                            <MudDivider Class="my-1" />
                            <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small"
                                OnClick="Logout">
                                Disconnect
                            </MudButton>
                        </MudPaper>
                    </ChildContent>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Secondary" Class="ml-4"
                    Style="border-radius: 0; font-weight: bold;">
                    LOGIN
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _grayZoneTheme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Background = "#0a0a0a",
            Surface = "#141414",
            AppbarBackground = "#141414",
            TextPrimary = "#e0e0e0",
            TextSecondary = "#9e9e9e",
            Primary = "#90A4AE",
            Secondary = "#FF9800",
            Success = "#00E676",
            Error = "#FF5252",
            Info = "#29B6F6",
            Warning = "#FFC107",
            LinesDefault = "#333333"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Exo 2", "Roboto", "Helvetica", "Arial", "sans-serif" }
            },
            H5 = new H5Typography()
            {
                FontWeight = "700"
            }
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "2px"
        }
    };

    private string GetEmail(System.Security.Claims.ClaimsPrincipal user)
    {
        return user.FindFirst("email")?.Value ?? user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ??
        "Unknown";
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        Nav.NavigateTo("/login");
    }
}